{
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2021"],
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "react-jsx",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true
    },
    "include": ["src"]
}
